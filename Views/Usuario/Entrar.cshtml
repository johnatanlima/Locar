@model Locar.Models.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Realizar Login";
}


<div class="border border-light rounded shadow col-md-8">
    <div class="container">

        <h3 class="titulo"><i class="fas fa-user"></i> Realizar Login</h3>
        <hr />
        <div class="row">
            <div class="col-md-8">
                <form asp-action="Entrar">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="campos">
                        <div class="form-group">
                            <label asp-for="Email" class="control-label"></label>
                            <input asp-for="Email" type="email" class="form-control form-control-lg" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="campos">
                        <div class="form-group">
                            <label asp-for="Password" class="control-label"></label>
                            <input asp-for="Password" type="password" class="form-control form-control-lg" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                    </div>
                    
                    <div class="form-group botoes">
                        <input type="submit" value="Efeturar login" class="btn btn-outline-info btn-lg" /> &nbsp;
                        <a asp-action="Registrar" asp-controller="Usuario" class="btn btn-link btn-lg"> Não sou registrado </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

