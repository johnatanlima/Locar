@model Locar.Models.ViewModels.AtualizarUsuarioViewModel
@{
    ViewData["Title"] = "Atualizando Usuario" + Model.Nome;
}

<h1>Atualizar Usuario</h1>

<div class="border border-light rounded shadow col-md-8">
    <div class="container">

        <h3 class="titulo"><i class="fas fa-user"></i> Atualizar dados de usuário</h3>
        <hr />
        <div class="row">
            <div class="col-md-8">
                <form asp-action="AtualizarUsuario">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input asp-for="Id" type="hidden"/>

                    <div class="campos">
                        <div class="form-group">
                            <label asp-for="Nome" class="control-label"></label>
                            <input asp-for="Nome" class="form-control form-control-lg" />
                            <span asp-validation-for="Nome" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="campos">
                        <div class="form-group">
                            <label asp-for="Cpf" class="control-label"></label>
                            <input asp-for="Cpf" class="form-control form-control-lg cpfClass" />
                            <span asp-validation-for="Cpf" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="campos">
                        <div class="form-group">
                            <label asp-for="Telefone" class="control-label"></label>
                            <input asp-for="Telefone" class="form-control form-control-lg telefoneClass" />
                            <span asp-validation-for="Telefone" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="campos">
                        <div class="form-group">
                            <label asp-for="NomeUsuario" class="control-label">Nome de Usuário</label>
                            <input asp-for="NomeUsuario" class="form-control form-control-lg" />
                            <span asp-validation-for="NomeUsuario" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="campos">
                        <div class="form-group">
                            <label asp-for="Email" class="control-label"></label>
                            <input asp-for="Email" type="email" clss="form-control form-control-lg" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group botoes">
                        <input type="submit" value="Atualizar" class="btn btn-outline-info btn-lg" /> &nbsp;
                        <a asp-action="Inicio" asp-controller="Usuario" class="btn btn-link btn-lg"> Voltar </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.16/jquery.mask.min.js"></script>

    <script>
        $(function () {
            $(".cpfClass").mask("999.999.999-99");
            $(".telefoneClass").mask("(99) 9 9999-9999");
        })
    </script>
}

